<%- include("partials/head.ejs")%>
<main class="container">
 <%- include('partials/nav.ejs')%>
<form  action="/admin/poll/create" method="POST">
        <legend>Create poll</legend>
    <fieldset class="form-group">
        <label for="poll-name">Poll name</label>
        <input class="form-control" type="text" name="pollName" >
        <input class="form-control" name="_csrf" type="hidden" value=<%= csrf %> />
    </fieldset>
    <div id="options-list" class="form-group">
       <label for="option">Options</label>
       <button class="btn btn-sm btn btn-outline-link" id="add-option">+ Add option</button>  
       <button class="btn btn-sm btn btn-outline-link" id="remove-option">- Remove option</button>  
        <input class="form-control" data-option="option" name="option" type="text" placeholder="Option"/>
       <% if(locals.message) { %>
           <% if(locals.message.type === 'error') { %>
                <%= locals.message.message %>
            <% } %>        
            <% if(locals.message.type === 'success') { %>
                <%= locals.message.message %>
            <% } %>   
        <% } %> 

    </div>
    <div class="form-group">
        <label for="type">Choose the numbers of possible answers</label>
        <select class="form-control" id="type" name="type">
            <option>One</option>
            <option>Many</option>
        </select>
    </div>
    <div class="form-group">
            <label for="active">Choose the status of the poll</label>
            <select class="form-control" id="active" name="active">
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>
    <input class="btn btn-lg btn-info" type="submit" value="Submit">
</fieldset>
</form>
</main>
<%- include('partials/footer') %>